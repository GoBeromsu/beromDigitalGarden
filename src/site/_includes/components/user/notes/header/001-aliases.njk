{%- if aliases -%}
<div class="aliases">
    <div class="heading">Also known as:</div>
    {#- aliases 문자열을 배열로 변환 -#}
    {%- set aliasList = aliases.split(',') -%}
    {%- for alias in aliasList -%}
        {#- alias가 문자열인 경우에만 toLowerCase() 호출 -#}
        {%- if alias and title and alias.toLowerCase() != title.toLowerCase() -%}
            <div class="alias pill">{{alias}}</div>
        {%- endif -%}
    {%- endfor -%}
</div>
{%- endif -%}
